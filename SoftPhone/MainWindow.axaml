<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:softPhone="clr-namespace:SoftPhone"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        MinWidth="216"
        MinHeight="335"
        x:Class="SoftPhone.MainWindow"
        Title="电话中心">
  <Grid RowDefinitions="Auto,*">
    <Menu Grid.Row="0" Background="#F0F2F5">
      <MenuItem Header="电话">
        <MenuItem Header="增加" Click="AddNew_OnClick"></MenuItem>
        <MenuItem Header="清空" Click="CleanAll_OnClick"></MenuItem>
        <MenuItem Header="退出" Click="Exit_OnClick"></MenuItem>
      </MenuItem>
      <MenuItem Header="自动">
        <MenuItem Header="配置"></MenuItem>
        <MenuItem Header="开启"></MenuItem>
        <MenuItem Header="关闭"></MenuItem>
      </MenuItem>
    </Menu>
    <WrapPanel Name="PhoneViewContainer" Grid.Row="1">
    </WrapPanel>
  </Grid>
</Window>
